# Frontend environment variables for integration_frontend

# Preferred: explicitly set backend base URL
# For local dev:
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# For containerized deployments (if service discovery isn't automatic):
# NEXT_PUBLIC_API_BASE_URL=http://integration_backend:8000

# Alternative fallback recognized by the app:
# API_URL=http://integration_backend:8000

# Optional readiness script settings
# BACKEND_WAIT_TIMEOUT_MS=120000
# BACKEND_WAIT_INTERVAL_MS=2000
